---
const sections = ["about", "projects", "experience", "tech stack"];
---

<nav aria-label="Main Navigation" class="hidden w-fit lg:block">
	<ul class="space-y-4">
		{
			sections.map((section) => {
				return (
					<li>
						<a
							class="group nav-link flex items-center"
							href={`#${section.toLowerCase().replace(" ", "")}`}
						>
							<span class="nav-indicator mr-4 h-px w-8 bg-slate-600 transition-all duration-300 group-hover:w-16 group-hover:bg-amber-400 group-focus-visible:w-16 group-focus-visible:bg-amber-400" />
							<span class="text-xs font-bold tracking-widest text-slate-500 uppercase transition-colors duration-300 group-hover:text-amber-400 group-focus-visible:text-amber-400">
								{section}
							</span>
						</a>
					</li>
				);
			})
		}
	</ul>
</nav>
